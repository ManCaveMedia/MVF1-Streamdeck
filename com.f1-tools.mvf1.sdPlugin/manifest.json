            "Controllers": ["Keypad"],
            "States": [
                {
                    "Image": ""
                }
            ],
            "Tooltip": "Empty Tile for Player",
            "UUID": "com.f1-tools.mvf1.player-tile",
            "SupportedInMultiActions": false,
            "VisibleInActionsList": false
        },
        {
            "Icon": "actions/assets/google_icons/fullscreen",
            "Name": "Toggle Player Fullscreen",
            "Controllers": ["Keypad"],
            "States": [
                {
                    "Image": "actions/assets/google_icons/fullscreen"
                }
            ],
            "Tooltip": "Toggle A Player's Fullscreen",
            "UUID": "com.f1-tools.mvf1.fullscreen"
        },
        {
            "Icon": "actions/assets/google_icons/speed",
            "Name": "Toggle Driver's Speedometer Visibility",
            "Controllers": ["Keypad"],
            "States": [
                {
                    "Image": "actions/assets/google_icons/speed"
                }
            ],
            "Tooltip": "Toggle Individual Driver's Speedometer",
            "UUID": "com.f1-tools.mvf1.speedometer"
