        {
            "Icon": "actions/assets/mv-rounded",
            "Name": "Stream Volume Down",
            "Controllers": ["Keypad"],
            "States": [
                {
                    "Image": "actions/assets/mv-rounded"
                }
            ],
            "Tooltip": "Decrease a Specific Stream's Volume",
            "UUID": "com.f1-tools.mvf1.volume-down"
        }
